<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="oval" android:useLevel="false">
            <gradient android:angle="-90" android:startColor="#30FFFFFF" android:endColor="#30FFFFFF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval" android:useLevel="false">
            <solid android:color="#30FFFFFF"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval" android:useLevel="false">
            <gradient android:angle="-90" android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimary" />
        </shape>
    </item>
</selector>